<h2>Comments</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Comment body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user.username if comment.user.present? %></td>
        <td><%= link_to 'Destroy', admin_comment_path(comment), remote: true, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @comments %>
  </div>
  <%= will_paginate @comments, :container => false %>
</div>
