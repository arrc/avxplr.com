<div class="row av_admin_aircrafts">
  <div class="clearfix av_header_wrapper">
    <h3 class="float-left av_heading">Engines</h3>
    <section class="float-right av_search_form">
      <%= link_to "New", new_admin_editor_engine_path, class: "button small hollow secondary" %>
      <%= form_tag(admin_editor_aircrafts_path, :method => "get", class: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "search" %>
      <% end %>
    </section>
  </div>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Model</th>
        <th>Year</th>
        <th>Manufacturer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @engines.each do |engine| %>
        <tr>
          <td><%= engine.id %></td>
          <td><%= engine.name %></td>
          <td><%= engine.year %></td>
          <td><%= engine.engine_manufacturer.name if engine.engine_manufacturer.present? %></td>
          <td><%= link_to 'Show', admin_editor_engine_path(engine) %></td>
          <td><%= link_to 'Edit', edit_admin_editor_engine_path(engine) %></td>
          <td><%= link_to 'Destroy', admin_editor_engine_path(engine), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
