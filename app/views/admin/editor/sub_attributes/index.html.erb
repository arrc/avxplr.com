
<ul class="tabs" data-tabs id="admin-sub-attributes-tabs">
  <!-- <li class="tabs-title is-active"><a href="#roles">Roles</a></li> -->
  <li class="tabs-title is-active"><a href="#tab-<%= @role.class.name.downcase %>">Aircraft roles</a></li>
  <li class="tabs-title"><a href="#tab-<%= @type.class.name.downcase %>">Aircraft types</a></li>
  <li class="tabs-title"><a href="#tab-<%= @industry.class.name.downcase %>">Industries</a></li>
