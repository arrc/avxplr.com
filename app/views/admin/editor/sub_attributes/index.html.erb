  <div class="tabs-panel  is-active" id="tab-<%= @role.class.name.downcase %>">
    <h3>Roles</h3>
    <%= link_to 'Add new', new_admin_editor_sub_attribute_path(model: 'Role'), remote: true , data: { open: "#{@role.class.name.downcase}-new-item-modal" }%>
    <%= render "new_form", klass: @role %>
    <%= render "klass_list", klass: @roles %>
  </div>

