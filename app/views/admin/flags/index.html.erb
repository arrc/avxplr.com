<h2>Flags</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.id %></td>
        <td>
          <p><%= flag.message %></p>
          <hr>
          <%= link_to flag.flagable_type, shot_or_comment_path(flag) %>
          <small> Type: <%= flag.flagable_type %></small>
          <small>Flagged by: <%= flaged_by_user(flag) %> | Flagged user <%= flaged_user(flag) %></small>
        </td>
        <td><%= link_to 'Destroy', admin_flag_path(flag), remote: true, method: :delete %></td>
        <td><%= link_to 'Nuke it!', admin_flag_path(flag, nuke: true), remote: true, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
