<h3><%= @user.username %>'s profile</h3>
<%= simple_form_for @user, url: admin_user_path(@user) do |f| %>
<%= f.input :is_active, as: :radio_buttons %>
<%= f.submit %>
<% end %>
<hr>
<h3>Comments </h3><%= @user.comments.count %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Shot</th>
      <th>Body</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= link_to "Shot", shot_path(comment.commentable_id) %></td>
        <td><%= comment.body %></td>
        <td><%= comment.created_at %></td>
        <td><%#= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
