<div class="large-8 columns ">
<section class="av_aircraft_show">
  <!-- Title  -->
  <section class="aircraft_show__title clearfix">
      <h2 class="float-left aircraft_show__title--heading"><%= @aircraft.model %></h2>
      <!-- Fav -->
        <% if current_user.favorites.exists?(favoritable_type: "Aircraft", favoritable_id: @aircraft.id) %>
          <div class="float-right aircraft_show__title--fav-icon">Faved</div>
        <% elsif current_user %>
          <div class="float-right aircraft_show__title--fav-icon"><%= link_to "Fav", favorite_aircraft_path(@aircraft), method: :put %></div>
        <% end %>
      <!-- /Fav -->
  </section>

  <!-- Description -->
  <section class="aircraft_show__description">
    <p><%= @aircraft.description %></p>
  </section>

  <!-- Tabs -->
  <ul class="tabs av_aircraft__details--tabs" data-tabs id="av_aircraft__details">
    <li class="tabs-title is-active"><a href="#av_aircraft__details--specifications" aria-selected="true">Specifications</a></li>
    <li class="tabs-title"><a href="#av_aircraft__details--gallery">Gallery</a></li>
  </ul>

