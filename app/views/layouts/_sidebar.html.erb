    <% @latest_shots.each do |shot| %>
      <% if shot.image.present? %>
        <div class="column">
          <%= link_to shot.image.url, { 'data-lightbox': "sidebar", rel: "lightbox" } do %>
          <%= image_tag(shot.image.thumb.url, class: "thumbnail") %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

