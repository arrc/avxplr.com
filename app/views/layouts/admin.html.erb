<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render "layouts/header" %> <!-- Main header block -->
  </head>

  <body id="<%= params[:controller].parameterize %>_controller">

    <!-- Heaer/ navbar -->
    <div class="av_header">
      <%= render "layouts/navbar" %> <!-- Navigation menu -->
    </div>

    <section class="row av_admin">
        <ul class="row column menu simple av_admin__menu">
            <li><%= link_to 'Dashboard', admin_dashboard_path %></li>
            <li><%= link_to "Aircrafts", admin_editor_aircrafts_path %></li>
            <li><%= link_to "Editor", new_admin_editor_aircraft_path %></li>
            <li><%= link_to "Engine", admin_editor_engines_path %></li>
            <li><%= link_to "Sub Attributes", admin_editor_sub_attributes_path %></li>
            <li><%= link_to "Spam", admin_flags_path %></li>
            <li><%= link_to "Users", admin_users_path %></li>
            <li><%= link_to "Shots", admin_shots_path %></li>
            <li><%= link_to "Comments", admin_comments_path %></li>
        </ul>
    </section>

    <!-- Notifications -->
        <div class="flash-messages">
          <% flash.each do |key, value| %>
            <section class="callout warning flash-messages--notice"><%= notice if flash.notice %></section>
            <section class="callout alert flash-messages--alert"><%= alert if flash.alert %></section>
          <% end %>
        </div>

    <!-- content sidebar row -->
    <div class="row av_admin av_content">
        <%= yield %>
    </div>

    <%#= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <script type="text/javascript">
      $(function(){ $(document).foundation(); });


    </script>
  </body>
</html>
