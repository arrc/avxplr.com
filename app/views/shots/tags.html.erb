<h2><%= :tag %></h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Shot</th>
      <th>Caption</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shots.each do |shot| %>
      <tr>
        <td><%= shot.id %></td>
        <td><%#= shot.id %></td>
        <td><%= shot.caption %></td>
        <td><%= shot.all_tags %></td>
        <td><%= link_to 'Show', shot_path(shot) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
