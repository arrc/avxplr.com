<%= page_title: "avxplr - sign up" %>
<div class="large-8 columns av_content_column av_signup">
  <section class="av_wrapper">
    <h3 class="av_heading">Sign up</h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "av_forms" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, required: true, autofocus: true %>

        <%= f.input :email, required: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "button small secondary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </section>
</div>
